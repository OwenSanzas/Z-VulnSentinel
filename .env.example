# ── Database ──────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://vulnsentinel:vulnsentinel@localhost:5432/vulnsentinel

# ── JWT ───────────────────────────────────────────────────────
# Required. Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
VULNSENTINEL_JWT_SECRET=

# ── Initial Admin (optional) ─────────────────────────────────
# If all three are set, an admin user is created on first startup.
VULNSENTINEL_ADMIN_USERNAME=admin
VULNSENTINEL_ADMIN_EMAIL=admin@example.com
VULNSENTINEL_ADMIN_PASSWORD=

# ── GitHub ───────────────────────────────────────────────────
GITHUB_TOKEN=

# ── DeepSeek LLM ────────────────────────────────────────────
DEEPSEEK_API_KEY=

# ── Scheduler Intervals (seconds, optional) ──────────────────
# Poll intervals: how often the scheduler checks for work
VULNSENTINEL_SCAN_INTERVAL=1800
VULNSENTINEL_COLLECT_INTERVAL=600
VULNSENTINEL_CLASSIFY_INTERVAL=60
VULNSENTINEL_ANALYZE_INTERVAL=60
VULNSENTINEL_IMPACT_INTERVAL=60
VULNSENTINEL_REACHABILITY_INTERVAL=120
VULNSENTINEL_NOTIFY_INTERVAL=60
# Cutoffs: minimum age before re-processing (minutes)
VULNSENTINEL_SCAN_CUTOFF_MINUTES=60
VULNSENTINEL_COLLECT_CUTOFF_MINUTES=10

# ── SMTP Notifications (optional) ───────────────────────────
VULNSENTINEL_SMTP_HOST=smtp.gmail.com
VULNSENTINEL_SMTP_PORT=587
VULNSENTINEL_SMTP_USER=
VULNSENTINEL_SMTP_PASSWORD=
VULNSENTINEL_SMTP_FROM=
VULNSENTINEL_NOTIFY_TO=
